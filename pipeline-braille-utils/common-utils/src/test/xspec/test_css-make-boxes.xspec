<?xml version="1.0" encoding="utf-8"?>
<x:description xmlns:x="http://www.jenitennison.com/xslt/xspec"
               xmlns:css="http://www.daisy.org/ns/pipeline/braille-css"
               stylesheet="../../main/resources/xml/formatting/css-make-boxes.xsl">
  
  <x:scenario label="test_01">
    <x:context>
      <doc>
        <head css:display="none" css:counter-reset="foo">
          <meta name="author" content="Bert" css:string-set="author 'Bert'"/>
          <meta css:counter-reset="bar"/>
        </head>
        <body>
          <p css:display="block" css:counter-reset="baz" style="margin-left: 2" foo="bar"/>
        </body>
      </doc>
    </x:context>
    <x:expect label="result">
      <css:root>
        <css:box type="inline" name="doc">
          <css:_ css:counter-reset="foo bar"
                 css:string-set="author 'Bert'"/>
          <css:box type="inline" name="body">
            <css:box type="block" name="p" css:counter-reset="baz" style="margin-left: 2"/>
          </css:box>
        </css:box>
      </css:root>
    </x:expect>
  </x:scenario>
  
</x:description>
