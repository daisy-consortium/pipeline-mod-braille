<?xml version="1.0" encoding="UTF-8"?>
<x:description xmlns:x="http://www.daisy.org/ns/xprocspec"
               xmlns:px="http://www.daisy.org/ns/pipeline/xproc"
               xmlns:css="http://www.daisy.org/ns/pipeline/braille-css"
               script="../../main/resources/xml/formatting/split-into-sections.xpl">
  
  <x:scenario label="test_01">
    <x:call step="px:split-into-sections">
      <x:input port="source">
        <x:document type="inline">
          <css:block css:page="@page { size: 30 15 }">
            <front css:page="@page { size: 30 15; @bottom-right { content: counter(braille-page, lower-roman) } }">
              <css:block>
                <css:inline>foo</css:inline>
              </css:block>
            </front>
            <body>
              <css:block>
                <css:inline>bar</css:inline>
              </css:block>
            </body>
            <rear>
              <css:block css:counter-reset="braille-page 1">
                <css:inline>baz</css:inline>
              </css:block>
            </rear>
          </css:block>
        </x:document>
      </x:input>
      <x:option name="split-before" select="'*[parent::*][@css:page or @css:counter-reset]'"/>
      <x:option name="split-after" select="'*[parent::*][@css:page]'"/>
    </x:call>
    <x:context label="result">
      <x:document type="port" port="result"/>
    </x:context>
    <x:expect label="result" type="compare">
      <x:document type="inline">
        <css:block css:page="@page { size: 30 15 }" part="first">
        </css:block>
      </x:document>
      <x:document type="inline">
        <css:block css:page="@page { size: 30 15 }" part="middle">
          <front css:page="@page { size: 30 15; @bottom-right { content: counter(braille-page, lower-roman) } }">
            <css:block>
              <css:inline>foo</css:inline>
            </css:block>
          </front>
        </css:block>
      </x:document>
      <x:document type="inline">
        <css:block css:page="@page { size: 30 15 }" part="middle">
          <body>
            <css:block>
              <css:inline>bar</css:inline>
            </css:block>
          </body>
          <rear>
          </rear>
        </css:block>
      </x:document>
      <x:document type="inline">
        <css:block css:page="@page { size: 30 15 }" part="last">
          <rear>
            <css:block css:counter-reset="braille-page 1">
              <css:inline>baz</css:inline>
            </css:block>
          </rear>
        </css:block>
      </x:document>
    </x:expect>
  </x:scenario>
  
</x:description>
