<?xml version="1.0" encoding="UTF-8"?>
<x:description xmlns:x="http://www.daisy.org/ns/xprocspec"
               xmlns:px="http://www.daisy.org/ns/pipeline/xproc"
               xmlns:css="http://www.daisy.org/ns/pipeline/braille-css"
               script="../../main/resources/xml/formatting/css-split.xpl">
  
  <x:scenario label="test_01">
    <x:call step="px:css-split">
      <x:input port="source">
        <x:document type="inline">
          <css:root>
            <css:box type="block" css:page="size: 30 15">
              <front css:page="size: 30 15; @bottom-right { content: counter(braille-page, lower-roman) }">
                <css:box> foo </css:box>
              </front>
              <body>
                <css:box> bar </css:box>
              </body>
              <rear>
                <css:box css:counter-reset="braille-page 1"> baz </css:box>
              </rear>
            </css:box>
          </css:root>
        </x:document>
      </x:input>
      <x:option name="split-before" select="'*[@css:page or @css:counter-reset]'"/>
      <x:option name="split-after" select="'*[@css:page]'"/>
    </x:call>
    <x:context label="result">
      <x:document type="port" port="result"/>
    </x:context>
    <x:expect label="result" type="compare">
      <x:document type="inline">
        <css:root/>
      </x:document>
      <x:document type="inline">
        <css:root>
          <css:box type="block" part="first" css:page="size: 30 15"/>
        </css:root>
      </x:document>
      <x:document type="inline">
        <css:root>
          <css:box type="block" part="middle" css:page="size: 30 15">
            <front css:page="size: 30 15; @bottom-right { content: counter(braille-page, lower-roman) }">
              <css:box> foo </css:box>
            </front>
          </css:box>
        </css:root>
      </x:document>
      <x:document type="inline">
        <css:root>
          <css:box type="block" part="middle" css:page="size: 30 15">
            <body>
              <css:box> bar </css:box>
            </body>
            <rear>
            </rear>
          </css:box>
        </css:root>
      </x:document>
      <x:document type="inline">
        <css:root>
          <css:box type="block" part="last" css:page="size: 30 15">
            <rear>
              <css:box css:counter-reset="braille-page 1"> baz </css:box>
            </rear>
          </css:box>
        </css:root>
      </x:document>
      <x:document type="inline">
        <css:root/>
      </x:document>
    </x:expect>
  </x:scenario>
  
</x:description>
