<?xml version="1.0" encoding="UTF-8"?>
<x:description xmlns:x="http://www.daisy.org/ns/xprocspec"
               xmlns:px="http://www.daisy.org/ns/pipeline/xproc"
               xmlns:css="http://www.daisy.org/ns/pipeline/braille-css"
               script="../../main/resources/xml/formatting/handle-css-display.xpl">
  
  <x:scenario label="test_01">
    <x:call step="px:handle-css-display">
      <x:input port="source">
        <x:document type="inline">
          <doc>
            <head style="display:none" css:counter-reset="foo">
              <meta name="author" content="Bert" css:string-set="author 'Bert'"/>
              <meta css:counter-reset="bar"/>
            </head>
            <body>
              <p style="display:block" css:counter-reset="baz">
                foo
              </p>
            </body>
          </doc>
        </x:document>
      </x:input>
    </x:call>
    <x:context label="result">
      <x:document type="port" port="result"/>
    </x:context>
    <x:expect label="result" type="compare">
      <x:document type="inline">
        <doc>
          <body>
            <css:block css:string-set="author 'Bert'"
                       css:counter-reset="foo bar baz">
              <css:inline>
                foo
              </css:inline>
            </css:block>
          </body>
        </doc>
      </x:document>
    </x:expect>
  </x:scenario>
  
</x:description>
